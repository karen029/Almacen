<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo_acceso"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:gravity="center">

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Bienvenido a AlmacÃ©n"
            android:textColor="@color/negro"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="80dp"
            android:layout_gravity="top|end"
            android:layout_margin="25dp"
            android:layout_weight="4"
            android:src="@drawable/logo" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnlibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="21dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/icolibro"
                android:tint="@color/blanco"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Libros"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnmanu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="21dp"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/iconalm"
                android:tint="@color/blanco"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Manualidades"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btncocina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="21dp"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/icococ"
                android:tint="@color/blanco"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Cocina"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnofic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="21dp"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/icoofici"
                android:tint="@color/blanco"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Oficina"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnlim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="21dp"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botonmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/icolim"
                android:tint="@color/blanco"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Limpieza"
                android:textColor="@color/blanco"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
